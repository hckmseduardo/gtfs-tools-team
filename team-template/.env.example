# GTFS Editor Team Template - Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Team Configuration (REQUIRED)
# ============================================

# Team identifier (e.g., "acme-transit", "my-agency")
TEAM_SLUG=

# Base domain (e.g., "app.gtfs-tools.com")
DOMAIN=

# Host path for team data storage
DATA_PATH=

# ============================================
# Security (REQUIRED)
# ============================================

# PostgreSQL password for this team's database
TEAM_DB_PASSWORD=

# Application secret key (generate with: openssl rand -base64 64)
TEAM_SECRET_KEY=

# Cross-domain authentication secret (shared with portal)
CROSS_DOMAIN_SECRET=

# ============================================
# GTFS Validation (optional)
# ============================================

# Host path for GTFS validation data
GTFS_VALIDATION_HOST_PATH=/Volumes/dados/projects/GTFS-Editor/validation_data

# ============================================
# Email Configuration (optional)
# ============================================

# Email provider: smtp or sendgrid
EMAIL_PROVIDER=smtp

# Sender email address
EMAIL_FROM_EMAIL=

# Sender display name
EMAIL_FROM_NAME=GTFS Editor

# SMTP server settings
SMTP_HOST=smtp.protonmail.ch
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# ============================================
# Kanban AI Agents Configuration
# ============================================

# Git repository settings (pulls latest code on container startup)
KANBAN_AGENTS_REPO=https://github.com/hckmseduardo/kanban-agents.git
KANBAN_AGENTS_BRANCH=main
AUTO_UPDATE=true
# GitHub Personal Access Token (required for private repositories)
# Create at: https://github.com/settings/tokens (needs 'repo' scope)
GITHUB_TOKEN=

# Webhook secret for kanban agent authentication
KANBAN_WEBHOOK_SECRET=

# LLM Provider: anthropic, openai, or ollama
LLM_PROVIDER=anthropic

# LLM Model to use
LLM_MODEL=claude-sonnet-4-5-20250929

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=32768

# API Keys (provide based on LLM_PROVIDER)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# SSH settings for host command execution
SSH_ENABLED=true
SSH_HOST=host.docker.internal
SSH_PORT=22
SSH_USER=
SSH_KEY_PATH=

# Debug mode
DEBUG=false
